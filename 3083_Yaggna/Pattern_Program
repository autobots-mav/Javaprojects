package Automation;

import java.util.Scanner;

public class Patternexercise {
	public static void main(String[] args) {
		Scanner x = new Scanner (System.in);
		String a = x.nextLine();
		{
			int i,j;
			for(i=0;i<3;i++)
			{
				for(j=0;j<=i;j++)
				{
					System.out.print(a);
				}
				System.out.println();
			}
		}			
				
	}

}
